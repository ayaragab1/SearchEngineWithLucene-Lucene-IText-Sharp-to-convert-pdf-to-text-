@model SearchEngineWithLucene.Requests.BookVm

<div class="container">
    <div class=" mb-5 ">
        <h3 class="text-center">Add Book </h3>
    </div>
    <div class="row justify-content-center ">
        <div class="col-lg-12">
            <form  asp-controller="Home" asp-action="SetBook" method="post" asp-route-id="@Model.Id" enctype="multipart/form-data" >
                <input type="hidden" asp-for="Id"/>
                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span  class="input-group-text" id="inputGroup-sizing-default">Title</span>
                        </div>
                        <input  asp-for="Title" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Summary</label>
                        <textarea asp-for="Summary" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Default file input example</label>
                        <input asp-for="File" class="form-control " type="file" id="formFile">
                    </div>
                    <div class="controls">
                        <button class="form-control btn btn-primary " style="font-size: larger" type="submit">Save </button>
                    </div>
                </div>

            </form>
        </div>
    </div>


</div>
